﻿@model  List<PortfolioProject.Models.Service>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Admin/Index.cshtml";
    int say = 0;
}

<div class="alert alert-info h4">Hizmet Bilgileri Sayfası</div>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Simge</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        say++;

        <tr>
            <td>@say</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><i class="@item.Icon"></i></td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-warning">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Service/CreateService/" class="btn btn-outline-info">Yeni Hizmet Ekle</a>