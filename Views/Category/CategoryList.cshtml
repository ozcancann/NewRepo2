﻿﻿@model List<PortfolioProject.Models.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="alert alert-info h4">Kategori Listesi ve İşlemleri</div>


<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Silme İşlemi</th>
        <th>Güncelleme İşlemi</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-warning">Sil</a>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>

        </tr>
    }
</table>

<a href="/Category/CreateCategory/" class="btn btn-outline-info">Yeni Kategori Ekleme Sayfası</a>
