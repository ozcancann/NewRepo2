﻿@model PortfolioProject.Models.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="alert alert-info h4">Kategori Güncelleme Sayfası</div>

<form method="post">
    @Html.HiddenFor(x => x.CategoryId)
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Kategoriyi Güncelle</button>
    <br />
    <br />
    <button onclick="goBack()" class="btn btn-outline-warning">Mesaj Sayfasına Geri Dön</button>

    <script>
function goBack() {
    window.history.back();
}
    </script>

</form>