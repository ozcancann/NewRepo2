﻿@model List<PortfolioProject.Models.Profile>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="alert alert-info h4">Profil Bilgileri Sayfası</div>

<table class="table table-hover">
    <tr>

        <th>#</th>
        <th>Doğum Tarihi</th>
        <th>Email Adresi</th>
        <th>Telefon Numarası</th>
        <th>Github Linki</th>
        <th>Adres</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fotoğraf Url</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ProfileId</th>
            <td>@item.Birthdate</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Github</td>
            <td>@item.Address</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Profil/UpdateProfile/@item.ProfileId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>