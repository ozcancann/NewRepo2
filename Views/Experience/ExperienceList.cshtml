﻿@model List<PortfolioProject.Models.Experience>
@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
    int say = 0;
}
<div class="alert alert-info h4">Deneyim Görüntüleme Sayfası</div>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Firma Bilgisi</th>
        <th>Departman Bilgisi</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        say++;

        <tr>
            <td>@say</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
    </table>
    <td><a href="/Experience/CreateExperience/" class="btn btn-outline-info">Yeni Deneyim Ekleme</a></td>
