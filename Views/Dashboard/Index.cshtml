@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div id="root">

    <div class="alert alert-info h4">Dashboard</div>

    <div class="container pt-5">
        <div class="row align-items-stretch">

            <div class="Info col-lg-3 col-md-6">
