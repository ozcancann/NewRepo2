﻿@model List<PortfolioProject.Models.Education>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="alert alert-info h4">Eğitim Listesi ve İşlemleri</div>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kurum Adı</th>
        <th>Bölüm Bilgisi</th>
        <th>Açıklama</th>
        <th>Mezuniyet Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.EducationId</th>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-warning">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-outline-info">Yeni Eğitim Bilgisi Girişi</a>