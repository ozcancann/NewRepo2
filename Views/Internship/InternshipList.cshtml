﻿@model List<PortfolioProject.Models.Internship>
@{
    ViewBag.Title = "InternshipList";
    Layout = "~/Views/Admin/Index.cshtml";
    
}

<div class="alert alert-info h4">Staj Listesi ve İşlemleri</div>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Firma Adı</th>
        <th>Başlangıç Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.InternshipId</td>
            <td>@item.CompanyName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.Position</td>
            <td>@item.Description</td>
            <td><a href="/Internship/DeleteInternship/@item.InternshipId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Internship/UpdateInternship/@item.InternshipId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Internship/CreateInternship" class="btn btn-outline-info">Yeni Staj Bilgisi Ekleme</a>