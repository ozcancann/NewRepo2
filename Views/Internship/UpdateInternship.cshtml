﻿@model PortfolioProject.Models.Internship
@{
    ViewBag.Title = "UpdateInternship";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="alert alert-info h4">Staj Bilgisi Güncelleme Sayfası</div>

<form method="post">
    @Html.HiddenFor(x => x.InternshipId)

    <label>Firma Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    <br />

    <label>Başlangıç Tarihi</label>
    @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
    <br />

    <label>Bitiş Tarihi</label>
    @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control" })
    <br />

    <label>Pozisyon</label>
    @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
    <br />

    <label>Deneyim Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-success">Staj Bilgilerini Güncelle</button>
    <br />
    <br />
    <button onclick="goBack()" class="btn btn-outline-warning">Mesaj Sayfasına Geri Dön</button>

    <script>
function goBack() {
    window.history.back();
}
    </script>
</form>